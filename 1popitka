    <script>
        // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –¥–∞–Ω–Ω—ã—Ö
        let userData = {
            avatar: "https://placekitten.com/300/300",
            name: "–ê–Ω—è –°–∫–∞–∑–æ—á–Ω–∞—è",
            bio: "–ü—Ä–∏–≤–µ—Ç! –ú–µ–Ω—è –∑–æ–≤—É—Ç –ê–Ω—è, –∏ —è –æ–±–æ–∂–∞—é –≤—Å—ë –º–∏–ª–æ–µ –∏ –∫—Ä–∞—Å–∏–≤–æ–µ! –ó–∞–Ω–∏–º–∞—é—Å—å —Ç–≤–æ—Ä—á–µ—Å—Ç–≤–æ–º, –ª—é–±–ª—é –º—É–∑—ã–∫—É –∏ –∞–Ω–∏–º–µ. –†–∞–¥–∞ –≤–∏–¥–µ—Ç—å —Ç–µ–±—è –Ω–∞ –º–æ–µ–π —Å—Ç—Ä–∞–Ω–∏—á–∫–µ! üíñ",
            telegram: "#",
            instagram: "#",
            vk: "#",
            music: "#",
            telegramText: "–ú–æ–π Telegram",
            instagramText: "–ú–æ–π Instagram",
            vkText: "–ú–æ—è —Å—Ç—Ä–∞–Ω–∏—Ü–∞ VK",
            musicText: "–ú–æ—è –ø–µ—Å–Ω—è"
        };

        // –ó–∞–≥—Ä—É–∑–∫–∞ —Å–æ—Ö—Ä–∞–Ω–µ–Ω–Ω—ã—Ö –¥–∞–Ω–Ω—ã—Ö
        document.addEventListener('DOMContentLoaded', function() {
            loadSavedData();
            setupEventListeners();
            initializeCounter();
            createHearts();
        });

        // –ó–∞–≥—Ä—É–∑–∫–∞ —Å–æ—Ö—Ä–∞–Ω–µ–Ω–Ω—ã—Ö –¥–∞–Ω–Ω—ã—Ö
        function loadSavedData() {
            const savedData = localStorage.getItem('userProfileData');
            if (savedData) {
                userData = JSON.parse(savedData);
            }
            updateUI();
        }

        // –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ –∏–Ω—Ç–µ—Ä—Ñ–µ–π—Å–∞
        function updateUI() {
            document.getElementById('avatarImage').src = userData.avatar;
            document.getElementById('userName').textContent = userData.name;
            document.getElementById('bioText').textContent = userData.bio;
            document.getElementById('telegramLink').href = userData.telegram;
            document.getElementById('instagramLink').href = userData.instagram;
            document.getElementById('vkLink').href = userData.vk;
            document.getElementById('musicLink').href = userData.music;
            document.getElementById('telegramText').textContent = userData.telegramText;
            document.getElementById('instagramText').textContent = userData.instagramText;
            document.getElementById('vkText').textContent = userData.vkText;
            document.getElementById('musicText').textContent = userData.musicText;
        }

        // –ù–∞—Å—Ç—Ä–æ–π–∫–∞ –æ–±—Ä–∞–±–æ—Ç—á–∏–∫–æ–≤ —Å–æ–±—ã—Ç–∏–π
        function setupEventListeners() {
            // –ö–Ω–æ–ø–∫–∞ —Ä–µ–¥–∞–∫—Ç–∏—Ä–æ–≤–∞–Ω–∏—è
            document.getElementById('editToggle').addEventListener('click', function() {
                const editorPanel = document.getElementById('editorPanel');
                if (editorPanel.style.display === 'block') {
                    editorPanel.style.display = 'none';
                } else {
                    // –ó–∞–ø–æ–ª–Ω—è–µ–º —Ñ–æ—Ä–º—É —Ç–µ–∫—É—â–∏–º–∏ –¥–∞–Ω–Ω—ã–º–∏
                    document.getElementById('avatarInput').value = userData.avatar;
                    document.getElementById('nameInput').value = userData.name;
                    document.getElementById('bioInput').value = userData.bio;
                    document.getElementById('telegramInput').value = userData.telegram;
                    document.getElementById('instagramInput').value = userData.instagram;
                    document.getElementById('vkInput').value = userData.vk;
                    document.getElementById('musicInput').value = userData.music;
                    editorPanel.style.display = 'block';
                }
            });

            // –ö–Ω–æ–ø–∫–∞ —Å–æ—Ö—Ä–∞–Ω–µ–Ω–∏—è
            document.getElementById('saveBtn').addEventListener('click', function() {
                // –°–æ—Ö—Ä–∞–Ω—è–µ–º –¥–∞–Ω–Ω—ã–µ –∏–∑ —Ñ–æ—Ä–º—ã
                userData.avatar = document.getElementById('avatarInput').value;
                userData.name = document.getElementById('nameInput').value;
                userData.bio = document.getElementById('bioInput').value;
                userData.telegram = document.getElementById('telegramInput').value;
                userData.instagram = document.getElementById('instagramInput').value;
                userData.vk = document.getElementById('vkInput').value;
                userData.music = document.getElementById('musicInput').value;

                // –°–æ—Ö—Ä–∞–Ω—è–µ–º –≤ localStorage
                localStorage.setItem('userProfileData', JSON.stringify(userData));

                // –û–±–Ω–æ–≤–ª—è–µ–º –∏–Ω—Ç–µ—Ä—Ñ–µ–π—Å
                updateUI();

                // –°–∫—Ä—ã–≤–∞–µ–º –ø–∞–Ω–µ–ª—å —Ä–µ–¥–∞–∫—Ç–æ—Ä–∞
                document.getElementById('editorPanel').style.display = 'none';
                
                alert('–ò–∑–º–µ–Ω–µ–Ω–∏—è —Å–æ—Ö—Ä–∞–Ω–µ–Ω—ã!');
            });

            // –ö–Ω–æ–ø–∫–∞ –æ—Ç–º–µ–Ω—ã
            document.getElementById('cancelBtn').addEventListener('click', function() {
                document.getElementById('editorPanel').style.display = 'none';
            });

            // –†–µ–¥–∞–∫—Ç–∏—Ä–æ–≤–∞–Ω–∏–µ –ø–æ –∫–ª–∏–∫—É –Ω–∞ —ç–ª–µ–º–µ–Ω—Ç—ã
            document.getElementById('avatarImage').addEventListener('click', function() {
                document.getElementById('editToggle').click();
                setTimeout(function() {
                    document.getElementById('avatarInput').focus();
                }, 100);
            });

            document.getElementById('userName').addEventListener('click', function() {
                document.getElementById('editToggle').click();
                setTimeout(function() {
                    document.getElementById('nameInput').focus();
                }, 100);
            });

            document.getElementById('bioSection').addEventListener('click', function() {
                document.getElementById('editToggle').click();
                setTimeout(function() {
                    document.getElementById('bioInput').focus();
                }, 100);
            });
        }

        // –°—á–µ—Ç—á–∏–∫ –ø–æ—Å–µ—â–µ–Ω–∏–π
        function initializeCounter() {
            let count = localStorage.getItem('visitCount');
            if (count === null) {
                count = 0;
            } else {
                count = parseInt(count);
            }
            count++;
            localStorage.setItem('visitCount', count);
            
            // –ê–Ω–∏–º–∞—Ü–∏—è —É–≤–µ–ª–∏—á–µ–Ω–∏—è —Å—á–µ—Ç—á–∏–∫–∞
            animateCounter(0, count, 1500);
        }

        function animateCounter(start, end, duration) {
            let startTimestamp = null;
            const step = (timestamp) => {
                if (!startTimestamp) startTimestamp = timestamp;
                const progress = Math.min((timestamp - startTimestamp) / duration, 1);
                document.getElementById('visitCount').textContent = Math.floor(progress * (end - start) + start);
                if (progress < 1) {
                    window.requestAnimationFrame(step);
                }
            };
            window.requestAnimationFrame(step);
        }

        // –°–æ–∑–¥–∞–µ–º –ø–∞–¥–∞—é—â–∏–µ —Å–µ—Ä–¥–µ—á–∫–∏
        function createHearts() {
            const heartsContainer = document.getElementById('hearts');
            const heartCount = 15;
            
            for (let i = 0; i < heartCount; i++) {
                const heart = document.createElement('div');
                heart.innerHTML = '‚ù§';
                heart.classList.add('heart');
                
                // –°–ª—É—á–∞–π–Ω–∞—è –ø–æ–∑–∏—Ü–∏—è –∏ –∑–∞–¥–µ—Ä–∂–∫–∞
                heart.style.left = Math.random() * 100 + '%';
                heart.style.animationDelay = Math.random() * 5 + 's';
                heart.style.fontSize = (Math.random() * 15 + 15) + 'px';
                
                heartsContainer.appendChild(heart);
            }
        }
    </script>
